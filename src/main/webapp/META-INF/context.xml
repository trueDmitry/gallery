<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <!-- Specify a JDBC data source -->
    <Resource name="jdbc/connections"
             auth="Container"
             type="javax.sql.DataSource"
             username="gallery"
             password="gallery"
             driverClassName="com.mysql.cj.jdbc.Driver" 
             url="jdbc:mysql://localhost:3306/gallery?autoReconnect=true"
             validationQuery="select 1"
             maxActive="10"
             maxIdle="4"/>

</Context>